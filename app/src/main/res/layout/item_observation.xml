<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/observationItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/textViewObservationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Observation Type: Bird Sighting"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTimeIcon" />

    <ImageView
        android:id="@+id/imageViewTimeIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewObservationTime"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewCommentSnippet"
        android:src="@drawable/ic_time_24"
        android:contentDescription="Time" />

    <TextView
        android:id="@+id/textViewObservationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:30 PM"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCommentSnippet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comments: Very clear weather, trail was a bit muddy..."
        android:textSize="14sp"
        android:textColor="#999999"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewObservationName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>